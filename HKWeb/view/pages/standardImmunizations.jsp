<s:layout-render name="/layouts/default.jsp" pageTitle="Standard Immunizations">
  <s:layout-component name="topCategory">baby</s:layout-component>
  <s:layout-component name="lhsContent">
    <jsp:include page="babytools-nav.jsp"/>
  </s:layout-component>

  <s:layout-component name="rhsContent">
    <div class="main-inn-right">
      <table width="740" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td align="justify">
            <div class="innerBox" style="height: 35px">Below is standard vaccine schedule
              recommended by Indian Association of Paediatricians (IAP).
            </div>
          </td>
        </tr>
        <tr>
          <td>&nbsp;</td>
        </tr>
        <tr>
          <td width="800" valign="top" height="233">
            <div class="">
              <table class="" cellspacing="0" cellpadding="5" border="0">

                <tr bgcolor="#f3f3f3">
                  <td height="30px" width="100"><strong>Age</strong></td>
                  <td width="300"><strong>Vaccine</strong></td>
                  <td width="350"><strong>Remarks</strong></td>
                </tr>

                <tbody>
                <tr>
                  <td valign="top">At Birth</td>
                  <td valign="top">&#8226; BCG/Polio - 0<br/>
                    &#8226; OPV0 (Oral Polio Vaccine) - 1st dose <br/>
                    &#8226; OPV0 (Oral Polio Vaccine) - 1st dose<br/>
                    &#8226; Hepatitis B vaccine - 1st dose
                  </td>
                  <td valign="top"></td>
                </tr>


                <tr bgcolor="#f3f3f3">
                  <td valign="top">6 Weeks</td>
                  <td valign="top">&#8226; DTWP1/DTaP1 - 1st dose <br/>
                    &#8226; OPV1/OPV1 (2nd dose) + IPV1 - 1st dose <br/>
                    &#8226; Haemophilus influenza (Hib) - 1st dose <br/>
                    &#8226; Hepatitis B vaccine - 2nd dose
                  </td>
                  <td valign="top">&#8226; OPV alone if IPV cannot be
                    given
                  </td>
                </tr>


                <tr>
                  <td valign="top">10 Weeks</td>
                  <td valign="top">&#8226; DTWP2/DTaP2 - 2nd dose <br/>
                    &#8226; OPV2/OPV2 (3rd dose) + IPV2 - 2nd dose <br/>
                    &#8226; Haemophilus influenza (Hib) - 2nd dose
                  </td>
                  <td valign="top"></td>
                </tr>


                <tr bgcolor="#f3f3f3">
                  <td valign="top">14 Weeks</td>
                  <td valign="top">&#8226; DTWP3/DTaP3 - 3rd dose <br/>
                    &#8226; OPV3/OPV3 (4th dose) + IPV3 - 3rd dose <br/>
                    &#8226; Haemophilus influenza (Hib) - 3rd dose <br/>
                    &#8226; Hepatitis B vaccine - 3rd dose
                  </td>
                  <td valign="top">&#8226; The third dose of Hepatitis B
                    can be given at 6 months
                  </td>
                </tr>


                <tr>
                  <td valign="top">6 Months</td>
                  <td valign="top">&#8226; Hepatitis-B - 3 <br/>
                    &#8226; OPV / IPV - 4
                  </td>
                  <td valign="top"></td>
                </tr>

                <tr bgcolor="#f3f3f3">
                  <td valign="top">9 Months</td>
                  <td valign="top">&#8226; Measles vaccine</td>
                  <td valign="top"></td>
                </tr>

                <tr>
                  <td valign="top">15-18 Months</td>
                  <td valign="top">&#8226; DTWP B1/DTaP B1 - 1st booster
                    dose <br/>
                    &#8226; OPV4/OPV4 (5th dose) + IPVB1 - 4th dose <br/>
                    &#8226; Haemophilus influenza (Hib) - 4th dose <br/>
                    &#8226; MMR vaccine - 1st dose
                  </td>
                  <td valign="top"></td>
                </tr>

                <tr bgcolor="#f3f3f3">
                  <td valign="top">2 Years</td>
                  <td valign="top">&#8226; Typhoid vaccine</td>
                  <td valign="top">&#8226; Revaccination every 3 years</td>
                </tr>

                <tr>
                  <td valign="top">5 Years</td>
                  <td valign="top">&#8226; DTWP B2/DTaP B2 - 2nd booster
                    dose <br/>
                    &#8226; OPV5 (Oral Polio Vaccine) - 6th dose <br/>
                    &#8226; MMR vaccine - 2nd dose
                  </td>
                  <td valign="top">&#8226; The second dose of MMR vaccine
                    can be given at any time 8 weeks after the first dose
                  </td>
                </tr>

                <tr bgcolor="#f3f3f3">
                  <td valign="top">10 Years</td>
                  <td valign="top">&#8226; TdapHPV vaccine</td>
                  <td valign="top">&#8226; Only feamles, three doses at 0,
                    1-2 and 6 months
                  </td>
                </tr>

                <tr>
                  <td valign="top" colspan="3"><b>Additional vaccines
                    to be considered</b></td>
                </tr>

                <tr bgcolor="#f3f3f3">
                  <td valign="top">>6 weeks</td>
                  <td valign="top">&#8226; Rotavirus vaccine <br/>
                    &#8226; PCV 7
                  </td>
                  <td valign="top">&#8226; 2-3 doses at 4-8 weeks interval
                    <br/>
                    &#8226; 3 doses at 6, 10 and 14 weeks and 1 <br/>
                    &#8226; booster at 15-18 months
                  </td>
                </tr>

                <tr>
                  <td valign="top">>15 months</td>
                  <td valign="top">&#8226; Varicella vaccine</td>
                  <td valign="top">&#8226; 13 years two doses at 4-8 weeks
                    interval
                  </td>
                </tr>
                <tr bgcolor="#f3f3f3">
                  <td valign="top">>18 months</td>
                  <td valign="top">&#8226; Hepatitis A vaccine</td>
                  <td valign="top">&#8226; 2 doses at 6 months interval</td>
                </tr>

                </tbody>
              </table>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </s:layout-component>
</s:layout-render>